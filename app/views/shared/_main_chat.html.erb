<div class="chat">

    <%= form_with model: @chat, class:"form", local: true do |f| %>

      <div class="form-left">
        <%= f.text_field :name, class:"form-name", placeholder:"Type a Name" %>
        <%= f.text_area :message, class:"form-message", placeholder:"Type a Message" %>
      </div>

      <div class="form-right">
        <%= f.file_field :image, class:"form-image" %>
        <%= f.submit "投稿", class:"form-submit" %>
      </div>

    <% end %>
    
  <div class="chat-name">
  name
  </div>

  <div class="image">
  image
  </div>

</div>